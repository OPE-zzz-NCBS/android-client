<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingEnd="@dimen/activity_horizontal_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingStart="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <LinearLayout
        android:layout_width="0px"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="3">

        <TextView
            android:id="@+id/job_description_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="JOB DESCRIPTION"
            android:textSize="@dimen/list_header_text_size" />

        <TextView
            android:id="@+id/job_name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/job_name_text_view"
            android:text="job name"
            android:textColor="@color/light_text_color"
            android:textSize="@dimen/list_content_text_size" />

        <TextView
            android:id="@+id/job_created_at_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/job_description_text_view"
            android:text="Created at"
            android:textColor="@color/light_text_color"
            android:textSize="@dimen/list_content_text_size" />
    </LinearLayout>

    <TextView
        android:id="@+id/job_status_text_view"
        android:layout_width="0px"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:textSize="@dimen/list_content_small_text_size"
        android:textStyle="bold"
        android:text="DONE"/>
</LinearLayout>